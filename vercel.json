{
  "version": 2,
  "functions": {
    "api/*.js": {
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/index.js"
    }
  ],
  "env": {
    "EMAIL_SERVICE": "@email_service",
    "EMAIL_USER": "@email_user", 
    "EMAIL_PASS": "@email_pass",
    "JWT_SECRET": "@jwt_secret"
  }
}
